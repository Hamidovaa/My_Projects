@model Slider
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">Jobs Grid</h4>


                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Jobs</a></li>
                            <li class="breadcrumb-item active">Jobs Grid</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-12">
                <div class="card job-filter">
                    <div class="card-body p-3">
                        <form method="post" asp-area="Admin" asp-controller="Slider" asp-action="Create" class="row">
                            @Html.AntiForgeryToken()
                            <div class="col-md-3">
                                <label>
                                    Sub Title
                                </label>
                                <input  asp-for="SubTitle"  type="text" class="form-control" />
                                <span asp-validation-for="SubTitle" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label>
                                    Title
                                </label>
                                <input asp-for="Title" type="text" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label>
                                    Price
                                </label>
                                <input asp-for="Price" type="text" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label>
                                    Image
                                </label>
                                <input asp-for="ImgUrl" type="file" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-danger btn-block mt-3">Add Database</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->
</div><!-- End Page-content -->
