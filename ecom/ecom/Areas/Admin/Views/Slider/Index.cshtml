<div class="page-content">
    <div class="container-fluid">

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
           Create Slider
        </button>
       
      


        <div class="row">
            <div class="col-lg-12">
                <div class="card job-filter">
                    <div class="card-body p-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Sub Title</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Operation</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SubTitle</td>
                                        <td>@item.Title</td>
                                        <td>@item.Price</td>
                                        <td> <img width="200" height="200" src="~/UploadSlider/@item.ImgUrl" /></td>
                                        <td><a class="btn btn-danger deleteBtn" asp-area="Admin" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                        <td><a class="btn btn-success deleteBtn" asp-area="Admin" asp-controller="Slider" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                                        @* <td>
                                            <button data-id="@item.Id" type="button" class="btn btn-primary mb-3 editBtn" data-bs-toggle="modal" data-bs-target="#exampleModalEdit">
                                                Edit Slider
                                            </button>
                                        </td> *@
                                        
                                        
                                    </tr>
                                };

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div> <!-- container-fluid -->
</div><!-- End Page-content -->
<!-- Modal -->

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Create</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="SliderCreateForm" method="post" asp-area="Admin" asp-controller="Slider" asp-action="Create" class="row">
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        <label>
                            Sub Title
                        </label>
                        <input name="SubTitle" type="text" class="form-control" />
                        @*  <span asp-validation-for="SubTitle" class="text-danger"></span> *@
                    </div>
                    <div class="col-md-12">
                        <label>
                            Title
                        </label>
                        <input name="Title" type="text" class="form-control" />
                        @* <span asp-validation-for="Title" class="text-danger"></span> *@
                    </div>
                    <div class="col-md-12">
                        <label>
                            Price
                        </label>
                        <input name="Price" type="text" class="form-control" />
                        @*  <span asp-validation-for="Price" class="text-danger"></span> *@
                    </div>
                    <div class="col-md-12">
                        <label>
                            Image
                        </label>
                        <input name="ImgUrl" type="file" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button form="SliderCreateForm" type="submit" class="btn btn-danger">Create</button>
            </div>
        </div>
    </div>
</div>


